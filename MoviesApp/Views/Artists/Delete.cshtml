@model MoviesApp.ViewModels.DeleteArtistsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Firstname"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Firstname
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="BirthdayDate"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.BirthdayDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Lastname"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Lastname
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>