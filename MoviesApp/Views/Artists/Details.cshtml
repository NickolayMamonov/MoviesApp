@model MoviesApp.ViewModels.ArtistViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           <label asp-for="Firstname"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Firstname
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="BirthdayDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.BirthdayDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Lastname"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Lastname
        </dd>
        <table class ="table">
               <thead>
               <tr>
                   <th>Title</th>
                   <th>ReleaseDate</th>
                   <th>Genre</th>
                   <th>Price</th>
                       
                   </tr>
               </thead>
               <tbody>
                   @foreach(var row in Model.ArtistsMovies){
                    <tr>
                        <td>@row.Movie.Title</td>
                        <td>@row.Movie.ReleaseDate.ToString("dd.mm.yyyy")</td>
                        <td>@row.Movie.Genre</td>
                        <td>@row.Movie.Price</td>
                    </tr>
                   }
               </tbody>
           </table>
     
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>