@model MoviesApp.ViewModels.ArtistViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           <label asp-for="Firstname"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Firstname
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="BirthdayDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.BirthdayDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Lastname"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Lastname
        </dd>
        
     
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>